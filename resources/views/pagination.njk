
    
 {% if(pagination.totalPages > 1) %}
  <ul class="pagination flex-justify-center" style="font-family:titr">

    {#-- Prev--#}
    {% if(pagination.page==1) %}
        <li class="page-item disabled "><a class="page-link" 
            href="#" tabindex="-1">قبلی</a></li>
    {% else %}
        <li class="page-item "><a class="page-link" 
            href="{{ url(route ,{ page: pagination.page-1 }) }}" tabindex="-1">قبلی</a></li>
    {% endif %}

    {#---------------------------#}
    {#-- generate links number --#}
    {#---------------------------#}

    {#-- pages<=5 --#}
    {% if(pagination.totalPages<=5) %} 
        {% for number in range(pagination.totalPages) %}
            {% if(pagination.page==number+1) %}
                <li class="page-item active"><a class="page-link" 
                    href="{{ url(route ,{ page: number+1 }) }}">{{number+1}}</a></li>
            {% else %}
                <li class="page-item"><a class="page-link" 
                    href="{{ url(route ,{ page: number+1 }) }}">{{number+1}}</a></li>
            {% endif %}
        {% endfor %} 

      {#-- curent page is 1 --#}
      {% elseif(pagination.page==1) %}
        <li class="page-item active"><a class="page-link" 
            href="{{ url(route ,{ page: pagination.page }) }}">{{pagination.page}}</a></li>
        {% for number in range(1,5) %}
            <li class="page-item"><a class="page-link" 
                href="{{ url(route ,{ page: number+1 }) }}">{{number+1}}</a></li>
        {% endfor %}

        {#-- curent page is 2 --#}
      {% elif(pagination.page==2) %}
        <li class="page-item"><a class="page-link"
            href="{{ url(route ,{ page: pagination.page-1 }) }}">{{pagination.page-1}}</a></li>
        <li class="page-item active "><a class="page-link"
            href="{{ url(route ,{ page: pagination.page }) }}">{{pagination.page}}</a></li>
        {% for number in range(1,4) %}
            <li class="page-item"><a class="page-link"
                href="{{ url(route ,{ page: pagination.page+number }) }}">{{pagination.page+number}}</a></li>
        {% endfor %}

      

      {#-- pre last page --#}
      {% elif(pagination.page===pagination.totalPages-1) %}
        {% for number in range(1,4) %}
            <li class="page-item"><a class="page-link" 
                href="{{ url(route ,{ page: pagination.totalPages-5+number }) }}">{{pagination.totalPages-5+number}}</a></li>
        {% endfor %}
        <li class="page-item active"><a class="page-link"
            href="{{ url(route ,{ page: pagination.page }) }}">{{pagination.page}}</a></li>
        <li class="page-item "><a class="page-link"
            href="{{ url(route ,{ page: pagination.page+1 }) }}">{{pagination.page+1}}</a></li>


        {#-- last page --#}
      {% elif(pagination.page === pagination.totalPages) %}
        {% for number in range(1,5) %}
            <li class="page-item"><a class="page-link" 
                href="{{ url(route ,{ page: pagination.page-5+number }) }}">{{pagination.page-5+number}}</a></li>
        {% endfor %}
        <li class="page-item active"><a class="page-link" 
            href="{{ url(route ,{ page: pagination.page }) }}">{{pagination.page}}</a></li>


      {#-- middle links --#}
      {% else %}
        {% for number in range(1,3) %}
        <li class="page-item"><a class="page-link"
            href="{{ url(route ,{ page: pagination.page-3+number }) }}">{{pagination.page-3+number}}</a></li>
        {% endfor %}

        <li class="page-item active "><a class="page-link"
            href="{{ url(route ,{ page: pagination.page }) }}">{{pagination.page}}</a></li>
        
        {% for number in range(1,3)%}
        <li class="page-item"><a class="page-link"
            href="{{ url(route ,{ page: pagination.page+number }) }}">{{pagination.page+number}}</a></li>
        {% endfor %}

      {% endif %}

      {#---------------------------#}
      {#-- end links number --#}
      {#---------------------------#}


      {#-- Next--#}
      {% if(pagination.page>=pagination.totalPages) %}
      <li class="page-item service disabled"><a class="page-link"
          href="{{ url(route ,{ page: pagination.page+1 }) }}">بعدی</a></li>
      {% else %}
      <li class="page-item service"><a class="page-link"
          href="{{ url(route ,{ page: pagination.page+1 }) }}">بعدی</a></li>
      {% endif %}

  </ul>
  {% endif %}