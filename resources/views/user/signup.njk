{% extends "layouts/layout.njk" %}


{%block title%}
ثبت نام
{%endblock%}

{% block content %}

<div class="row">

    <div class="cell-md-4"></div>

    <div class="cell-md-4 text-center">

        <h2 style="font-family:dastkhat">فرم ثبت نام کاربر</h2>
        <form method="post" action="{{url('signup')}}" data-role="validator" data-interactive-check="true">

            <input type='hidden' name='_csrf' value='{{_csrf}}'>

            <div class="form-group">
                <label>نام کاربری</label>
                <input type="text" name="formUser" data-role="input" data-validate="required" class="metro-input">
                <span class="invalid_feedback">
                    پر کردن الزامی است
                </span>

                <div class="error">
                    {% if flashMessage.formUserError !=null %}
                        {% for error in flashMessage.formUserError %}
                            <div class="message fg-red">{{error}}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label>آدرس ایمیل</label>
                <input type="email" name="formEmail" data-role="email" data-validate="required email"
                    class="metro-input">
                <span class="invalid_feedback">
                    آدرس ایمیل نامعتبر است
                </span>

                <div class="error">
                    {% if flashMessage.formEmailError !=null %}
                        {% for error in flashMessage.formEmailError %}
                            <div class="message fg-red">{{error}}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label>رمزعبور</label>
                <input type="password" name="formPassword" data-role="password" data-validate="required"
                    class="metro-input">
                <span class="invalid_feedback">
                    پرکردن الزامی است
                </span>

                <div class="error">
                    {% if flashMessage.formPasswordError !=null %}
                        {% for error in flashMessage.formPasswordError %}
                            <div class="message fg-red">{{error}}</div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <div class="form-group">
                <label>تکرار رمز عبور</label>
                <input type="password" name="formPassword_confirmation" data-role="password compare=formPassword" data-validate="required"
                    class="metro-input">
                <span class="invalid_feedback">
                    عدم همخوانی
                </span>

            </div>

            <div class="form-group">
                <button class="button primary">ثبت نام</button>
            </div>

        </form>

    </div>
    <div class="cell-md-4"></div>


    <div class="cell-md-4"></div>
    <div class="cell-md-4 text-center">

        {% if flashMessage.errors !=null %}
            {% for error in flashMessage.errors %}
                <div class="message remark alert">
                    {{error}}
                </div>
            {% endfor %}
        {% endif %}


        {% if flashMessage.error !=null %}
            <div class="message remark warning">
                {{flashMessage.error}}
            </div>
        {% endif %}


        {% if flashMessage.success!=null %}
            <div class="message remark success">
                {{flashMessage.success}}
            </div>
        {% endif %}

    </div>
    <div class="cell-md-4"></div>

  
</div>
{% endblock %}







{%block script %}

{{super()}}

<script>
    $(function () {
        $('.message').click(function (e) {
            $(".message").empty();
            $('.message').hide();
        });
    });
</script>

{%endblock%}